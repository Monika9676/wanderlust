
<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 mt-2">
    <h3>Create a new Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text"
             name="listing[title]"
             placeholder="Add a catchy title"
             class="form-control"
             required>
             <div class="valid-feedback">Title looks good</div>
             <!-- <div class="invalid-feedback">Please enter valid title</div> -->
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image Link</label>
            <input type="file" 
            name="listing[image]" 
            class="form-control"
            required
            > 
         </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
          <textarea 
           name="listing[description]"
           placeholder="Enter description"
           class="form-control"
           required></textarea> 
           <div class="invalid-feedback">Please enter short description</div>
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input 
             name="listing[price]"
             placeholder="1200"
             class="form-control"
             required>
             <div class="invalid-feedback">Please enter valid Price</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input type="text" 
            name="listing[country]" 
            placeholder="India"
            class="form-control"
            required>
            <div class="invalid-feedback">Please enter valid country</div>
        </div>
       </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text"
             name="listing[location]" 
             placeholder="Jaipur,Rajasthan"
             class="form-control"
             required>
             <div class="invalid-feedback">Please enter valid Location</div>
        </div>
        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select id="category" name="listing[category]" class="form-control">
                <option value="Trending">Trending</option>
                <option value="Rooms">Rooms</option>
                <option value="IconicCities">IconicCities</option>
                <option value="Mountains">Mountains</option>
                <option value="Castles">Castles</option>
                <option value="AmazingPools">AmazingPools</option>
                <option value="Camping">Camping</option>
                <option value="Farms">Farms</option>
                <option value="Arctic">Arctic</option>
            </select>
             <div class="invalid-feedback">Please enter valid Location</div>
        </div> 

        
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
</div></div>
</body>
