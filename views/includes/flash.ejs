<!-- <h1>Flash Message for success</h1> -->
<% if(success && success.length){ %>
<div class="alert alert-success alert-dismissible fade show col-lg-6 offset-lg-3" role="alert">
    <%= success %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<%}%>
<!-- for error -->
<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show col-lg-6 offset-lg-3 " role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>