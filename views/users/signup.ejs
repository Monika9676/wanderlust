<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <h1 class="col-lg-6 offset-lg-3 mb-3 mt-1">Sign Up</h1>
      <div class="col-lg-6 col-xs-12  offset-lg-3">
           <form action="/signup" method="post" class="needs-validation" novalidate >
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text"
                 name="username"
                 id="username"
                 class="form-control"
                 required>
            </div>
              <!-- email  -->
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email"
                 name="email"
                 id="email"
                 class="form-control"
                 required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password"
                 name="password"
                 id="password"
                 class="form-control"
                 required>
            </div>
            <button class="btn btn-success">Submit</button>
           </form>
           <br>
      </div>
    </div>
</body>